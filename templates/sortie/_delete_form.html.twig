


<form method="post" action="{{ path('app_sortie_delete', {'id': sortie.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir suprimer votre sortie ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sortie.id) }}">

    <br>

    {%if sortie.getIdEtat().id != 1%}
    <label for="" style="color: darkgray">Motif d'annulation:</label> <br>
    <input type="text" name="motif">
    {%endif%}
    <button class="btn" style="color: white;" >  {%if sortie.getIdEtat().id != 1%} Annuler {%else%} Supprimer  {%endif%}</button>

</form>
