{% extends 'base.html.twig' %}

{% block title %}New Sortie{% endblock %}

{% block main %}

    <h1>Creer une Sortie</h1>


    {{ form_start(form) }}
    {{ form_widget(form) }}


    <select name="selectSite" class="form-select" style="margin-top: 15px">
        {% for site in sites %}
            <option value="{{ site.getId()}}"> {{ site.getNomSite()}} </option>
        {% endfor %}
    </select>

    <select name="selectLieux" class="form-select" style="margin-top: 15px">
        {% for lieu in lieux %}
            <option value="{{ lieu.getId()}}"> {{ lieu.getNom()}} </option>
        {% endfor %}
    </select>


    <br>


    <button type="submit" class="btn btn-success mt-2">Enregistrer</button>

    {{ form_end(form) }}
    <a href="{{ path('home') }}">Retour sur les sorties</a>
{% endblock %}
