                            <path d="M8 3a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 3zm8 8a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2a.5.5 0 0 1 .5.5zm-13.5.5a.5.5 0 0 0 0-1h-2a.5.5 0 0 0 0 1h2zm11.157-6.157a.5.5 0 0 1 0 .707l-1.414 1.414a.5.5 0 1 1-.707-.707l1.414-1.414a.5.5 0 0 1 .707 0zm-9.9 2.121a.5.5 0 0 0 .707-.707L3.05 5.343a.5.5 0 1 0-.707.707l1.414 1.414zM8 7a4 4 0 0 0-4 4 .5.5 0 0 0 .5.5h7a.5.5 0 0 0 .5-.5 4 4 0 0 0-4-4z"/>
                        </svg>
                        <span style="font-size: larger; font-weight: bold">S O R T I R</span>
                    </a>
                    <h2 class="text-white">Bienvenue {% if app.user %}{{ app.user.pseudo }}{%endif%}</h2>
                </div>



                <div class="col-sm-4 offset-md-1 py-4">
                    <h4 class="text-white">Menu</h4>
                    <ul class="list-unstyled">
                        <li><a href="{{ path('home') }}" class="text-white">Accueil</a></li>
                        <br>

                        {% if app.user %}
                            <li><a href="{{ path('app_sortie_new') }}" class="text-white">Ajouter une sortie</a></li>
                            <li><a href="{{ path('app_participant_edit', {'id': app.user.id }) }}" class="text-white">mon profil</a></li>
                        {% endif %}

                        <br/>
                        {% if app.user %}


                            <li><a href="{{ path('app_logout') }}" class="text-white">Se d√©connecter</a></li>
                        {% else %}
                            <li><a href="{{ path('app_participant_new') }}" class="text-white">S'inscrire</a></li>
                            <li><a href="{{ path('app_login') }}" class="text-white">Se connecter</a></li>
                        {% endif %}
                    </ul>
                </div>

            </nav>
        </header>
        {% block main %}


        {% endblock %}


    <footer>
        <nav class="navbar navbar-expand-lg navbar-light bg-success fixed-bottom">
            <div class="container-fluid p-3">
                <p class="position-absolute top-50 start-50 translate-middle">&copy; 2022 Notre groupe</p>
            </div>
        </nav>
    </footer>
    </body>
</html>
